import Router, {listen, navigate} from "../../router.js";

class {
    onCreate() {
        this.state = {
            currentRoute: null,
            params: {}
        };
    }

    onMount() {
        Router.initialize();

        listen('popstate', (event) => {
            this.navigate(event.state.path)
        });

        listen('navigate', (path) => {
            this.navigate(path);
        });

        if(this.input && this.input.defaultRoute) {
            navigate(this.input.defaultRoute);
        }
        else {
            navigate(window.location.pathname);
        }
    }

    navigate(path) {
        for(let route of this.input.routes) {
            let routeParams = route.path.match(/:[^\/]*(\/|$)/gi);

            let p = route.path.replaceAll('/', '\\/');
            p = route.path.replaceAll(/:[^\/]*(\/|$)/gi, '([^\\\/]+)(?:\\\/|$)');
            p += '$';

            let search = new RegExp(p, 'i');
            let matches = path.match(search);

            if(matches !== null && matches.index === 0) {
                this.state.params = {};

                let paramIndex = 1;
                for(let i = 0; i + 1 < matches.length && i < routeParams.length; i++) {
                    this.state.params[routeParams[i].replaceAll(/[\/:]/g, '')] = matches[i + 1]; 
                }

                this.state.currentRoute = route;

                return
            }
        }
    }
}

